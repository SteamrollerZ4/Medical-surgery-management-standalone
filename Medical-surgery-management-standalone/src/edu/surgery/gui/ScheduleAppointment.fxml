<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<GridPane
		fx:id="gp_main" 
		xmlns:fx="http://javafx.com/fxml/1"
		fx:controller="edu.surgery.gui.GUI"
		alignment="CENTER"
		hgap="10"
		vgap="10">
		
	<Label text="date: "
		GridPane.rowIndex="0"
		GridPane.columnIndex="0"/>		
	<DatePicker fx:id="dp_appointment_date"
		GridPane.rowIndex="0"
		GridPane.columnIndex="1"/>

	<ChoiceBox
		fx:id="cb_usernameOrNatId"
		value="Username"
		GridPane.rowIndex="1"
		GridPane.columnIndex="0">
	    <items>
	        <FXCollections fx:id="options"
	        	fx:factory="observableArrayList">
	            <String fx:value="National id" />
	            <String fx:value="Username" />
	        </FXCollections>
	    </items>
	</ChoiceBox>
	<TextField  fx:id="tf_usernameOrNatId"
		GridPane.rowIndex="1"
		GridPane.columnIndex="1"/>
			
	<Label text="time: "
		GridPane.rowIndex="2"
		GridPane.columnIndex="0"/>		
	<ChoiceBox
		fx:id="cb_time"
		value="08:00:00"
		GridPane.rowIndex="2"
		GridPane.columnIndex="1"
		GridPane.halignment="RIGHT">
	    <items>
	        <FXCollections fx:id="options"
	        	fx:factory="observableArrayList">
	            <String fx:value="08:00:00" />
	            <String fx:value="08:30:00" />
	            <String fx:value="09:00:00" />
	            <String fx:value="09:30:00" />
	            <String fx:value="10:00:00" />
	            <String fx:value="10:30:00" />
	            <String fx:value="11:00:00" />
	            <String fx:value="11:30:00" />
	            <String fx:value="12:00:00" />
	            <String fx:value="12:30:00" />
	            <String fx:value="14:00:00" />
	            <String fx:value="14:30:00" />
	            <String fx:value="15:00:00" />
	            <String fx:value="15:30:00" />
	        </FXCollections>
	    </items>
	</ChoiceBox>
		
	<Button text="schedule appointment"
		GridPane.rowIndex="3"
		GridPane.columnIndex="1"
		GridPane.halignment="RIGHT"
		onAction="#scheduleAppointment"/>

</GridPane>

