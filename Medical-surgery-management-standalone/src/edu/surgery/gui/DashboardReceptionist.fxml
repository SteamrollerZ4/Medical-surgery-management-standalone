<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
		fx:controller="edu.surgery.gui.GUI"
		fx:id="gp_main"
		alignment="CENTER"
		hgap="10"
		vgap="10">
	
	<Button text="New appointment"
		GridPane.rowIndex="0"
		GridPane.columnIndex="1"
		GridPane.halignment="RIGHT"/>
	
	<Button text="View appointments"
		GridPane.rowIndex="1"
		GridPane.columnIndex="1"
		GridPane.halignment="RIGHT"
		onAction="#displayAppointments"/>
		
	<Button text="Cancel appointment"
		GridPane.rowIndex="2"
		GridPane.columnIndex="1"
		GridPane.halignment="RIGHT"/>
		
	<Button text="View patient bills"
		GridPane.rowIndex="3"
		GridPane.columnIndex="1"
		GridPane.halignment="RIGHT"/>
		
	<Button text="View available times"
		GridPane.rowIndex="4"
		GridPane.columnIndex="1"
		GridPane.halignment="RIGHT"/>
		
	<Button text="Bill patient"
		GridPane.rowIndex="5"
		GridPane.columnIndex="1"
		GridPane.halignment="RIGHT"/>
		
	<Button text="logout"
		GridPane.rowIndex="6"
		GridPane.columnIndex="1"
		GridPane.halignment="RIGHT"
		onAction="#logout"/>
</GridPane>

